---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import Section from '../components/Section.astro';
import Services from '../components/Services.astro';
import Gallery from '../components/Gallery.astro';
import Catalog from '../components/Catalog/Catalog.astro';
---

<BaseLayout>
  <Hero />

  <div class="section-separator" />

  <Section
    id="servicios"
    title="Servicios"
    subtitle="Soluciones en concreto estampado para proyectos residenciales, comerciales e industriales."
  >
    <Services />
  </Section>

  <div class="section-separator" />

  <Section
    id="trabajos"
    title="Trabajos"
    subtitle="Muestra de acabados, patrones y ejecuciones recientes."
  >
    <Gallery />
  </Section>

  <div class="section-separator" />

  <Section
    id="catalogo"
    title="Catálogo"
    subtitle="Consulta precios, disponibilidad y realiza tu pedido directo por WhatsApp."
  >
    <Catalog />
  </Section>

  <div class="section-separator" />

  <Section id="contacto" title="Contacto" subtitle="Estamos listos para cotizar tu siguiente proyecto.">
    <div class="grid gap-6 md:grid-cols-2">
      <article class="panel space-y-4 p-6">
        <p><strong class="text-brand-yellow">WhatsApp:</strong> +52 1 XXX XXX XXXX</p>
        <p><strong class="text-brand-yellow">Teléfono:</strong> +52 XXX XXX XXXX</p>
        <p><strong class="text-brand-yellow">Horario:</strong> Lunes a Sábado, 8:00 AM - 6:00 PM</p>
        <a class="btn-primary" href="https://wa.me/521XXXXXXXXXX" target="_blank" rel="noopener noreferrer">
          Enviar mensaje
        </a>
      </article>

      <article class="panel overflow-hidden">
        <iframe
          title="Ubicación"
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d14982.2204523504!2d-104.891!3d21.509!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x842738c22cb69f7b%3A0xa8b0e9f8f43e2eca!2sTepic%2C%20Nayarit!5e0!3m2!1ses-419!2smx!4v0000000000000"
          width="100%"
          height="320"
          style="border:0;"
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
        ></iframe>
      </article>
    </div>
  </Section>
</BaseLayout>
