---
interface Props {
  id?: string;
  title: string;
  subtitle?: string;
}

const { id, title, subtitle } = Astro.props;
---

<section id={id} class="py-14">
  <div class="container">
    <div class="mb-8">
      <h2 class="font-heading text-4xl uppercase tracking-wide text-brand-yellow">{title}</h2>
      {subtitle && <p class="mt-2 max-w-2xl text-white/80">{subtitle}</p>}
    </div>
    <slot />
  </div>
</section>
